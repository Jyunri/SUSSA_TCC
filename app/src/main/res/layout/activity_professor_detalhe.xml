                    android:id="@+id/tvDidatica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="DIDATICA"
                    android:layout_row="0"
                    android:layout_column="0" />

                <RatingBar
                    android:id="@+id/rbDIDATICA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    />

                <TextView
                android:id="@+id/tvCoerencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                    android:layout_row="1"
                    android:layout_column="0"
                android:text="COERENCIA" />

                <RatingBar
                android:id="@+id/rbCOERENCIA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"/>

                <TextView
                android:id="@+id/tvDominio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="DOMINIO"
                    android:layout_row="2"
                    android:layout_column="0"/>

                <RatingBar
                android:id="@+id/rbDOMINIO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"/>


                <TextView
                android:id="@+id/tvAuxilio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="AUXILIO"
                    android:layout_row="3"
                    android:layout_column="0"/>

                <RatingBar
                android:id="@+id/rbAUXILIO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="1"/>
            </GridLayout>



